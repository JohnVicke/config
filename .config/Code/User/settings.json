{
  // Vim settings should probably refactor into own file
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.highlightedyank.enable": true,
  "vim.enableNeovim": true,

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],

  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "p", "v"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": [":vsplit"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": [":split"]
    },
    {
      "before": ["<C-H>"],
      "after": ["<C-W>", "h"]
    },
    {
      "before": ["<C-J>"],
      "after": ["<C-W>", "j"]
    },
    {
      "before": ["<C-K>"],
      "after": ["<C-W>", "k"]
    },
    {
      "before": ["<C-L>"],
      "after": ["<C-W>", "l"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    }
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": false
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    "typescriptreact"
  ],

  "gruvboxMaterial.darkContrast": "soft",
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.insert": "#a89984",
  "vim.statusBarColors.normal": "#3c3836",
  "vim.statusBarColors.visualline": "#fb4934",
  "vim.statusBarColors.visualblock": "#fb4934",
  "vim.statusBarColors.visual": "#fb4934",

  "workbench.colorTheme": "Gruvbox Material Dark",
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#fabd2f",
    "statusBar.background": "#3c3836",
    "statusBar.noFolderBackground": "#3c3836",
    "statusBar.debuggingBackground": "#3c3836"
  },

  "workbench.iconTheme": "eq-material-theme-icons-ocean",
  "editor.formatOnSave": true,
  "editor.fontFamily": "JetBrains Mono",
  "editor.inlineHints.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "workbench.startupEditor": "newUntitledFile",
  "window.menuBarVisibility": "compact",
  "glassit.alpha": 255,
  "workbench.editor.enablePreview": false
}
